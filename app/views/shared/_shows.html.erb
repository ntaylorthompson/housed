<table class="table table-striped" >
	<thead>
  	<tr>
	    <th>Date </th>
	    <th>Time </th>
	    <th>Location</th>
	    <th>Host</th>
	    <th>Ticket price</th>
	    <th>Tickets min</th>
	    <th>Tickets max</th>
	    <th>Tickets sold</th>
	    <th>Host page URL</th>
	    <th>Actions</th>
	  </tr>
	</thead>

<% @shows.each do |show| %>
  <tr>
    <td><%= link_to show.date.to_formatted_s(:rfc822), user_show_path(current_user, show)    %></td>
    <td><%= show.time.to_formatted_s(:time) if not show.time.nil? %></td>
    <td><%= show.location.address %></td>
	<td><%= show.host.email %></td>
    <td><%= number_to_currency(show.ticket_price) %></td>
    <td><%= show.tickets_min %></td>
    <td><%= show.tickets_max %></td>
    <td><%= show.tickets_sold %></td>
    <td><%= link_to host_url(show.web_string), host_url(show.web_string) %></td>
<% if show.tickets_sold == 0 %>
    <td> <%= link_to t('.edit', :default => t("helpers.links.edit")),
                 edit_show_path(show), :class => 'btn btn-mini' %></td>
<% else %> <td></td>

<% end %>
  </tr>
<% end %>
</table>