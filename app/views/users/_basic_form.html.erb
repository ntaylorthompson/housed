<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label "Website URL" %><br />
    <%= f.text_field :website %>
  </div>
  <div class="field">
    <%= f.label "Home zip code" %><br />
    <%= f.number_field :zip %>
  </div>
  <div class="field">
    <%= f.label "Home travel radius (miles)" %><br />
    <%= f.select :travel_radius, [10,25,50,100] %>
  </div>
  <div class="field">



    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>


  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
